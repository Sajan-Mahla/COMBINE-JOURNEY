import Combine
import Foundation

print("ğŸ”— DAY 6: BUILD YOUR FIRST CHAIN\n")

// MARK: - What is a Chain?
print("What is a chain?")
print("Publisher â†’ map â†’ filter â†’ sink")
print("Data flows from left to right!\n")

var cancellables = Set<AnyCancellable>()

// MARK: - Example 1: Simple Chain
print("ğŸ“ EXAMPLE 1: Simple Number Chain\n")

[1, 2, 3, 4, 5].publisher
    .map { $0 * 2 }           // Double each number
    .filter { $0 > 5 }        // Keep only numbers > 5
    .sink { print("Got: \($0)") }
    .store(in: &cancellables)

print("\nâœ… What happened?")
print("1 â†’ 2 â†’ âŒ (not > 5)")
print("2 â†’ 4 â†’ âŒ (not > 5)")
print("3 â†’ 6 â†’ âœ… Got: 6")
print("4 â†’ 8 â†’ âœ… Got: 8")
print("5 â†’ 10 â†’ âœ… Got: 10")

// MARK: - Example 2: Text Chain
print("\n\nğŸ“ EXAMPLE 2: Name Chain\n")

["john", "alice", "bob", "charlie"].publisher
    .map { $0.uppercased() }  // Make uppercase
    .filter { $0.count > 3 }  // Keep names longer than 3 letters
    .sink { print("âœ“ \($0)") }
    .store(in: &cancellables)

print("\nâœ… What happened?")
print("john â†’ JOHN â†’ âœ… (4 letters)")
print("alice â†’ ALICE â†’ âœ… (5 letters)")
print("bob â†’ BOB â†’ âŒ (3 letters)")
print("charlie â†’ CHARLIE â†’ âœ… (7 letters)")

// MARK: - Example 3: Add More Steps
print("\n\nğŸ“ EXAMPLE 3: Longer Chain\n")

[10, 20, 30, 40, 50].publisher
    .map { $0 / 10 }          // Divide by 10
    .filter { $0 > 2 }        // Keep > 2
    .map { "Number: \($0)" }  // Make it a string
    .sink { print($0) }
    .store(in: &cancellables)

print("\nâœ… Flow:")
print("10 â†’ 1 â†’ âŒ")
print("20 â†’ 2 â†’ âŒ")
print("30 â†’ 3 â†’ âœ… â†’ Number: 3")
print("40 â†’ 4 â†’ âœ… â†’ Number: 4")
print("50 â†’ 5 â†’ âœ… â†’ Number: 5")



